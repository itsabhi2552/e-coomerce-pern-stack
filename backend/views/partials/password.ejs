<div class="form-group mt-3">
    <div class="text-danger mb-3" id="password-msg"></div>
    <label for="password" class="h5">Password</label>
    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
</div>

<div class="form-group mt-3">
    <label for="confirm-password" class="h5">Confirm Password</label>
    <input type="text" class="form-control" id="confirm-password" placeholder="Confirm Password" required>
</div>

<div class="mt-3">
    <input type="checkbox" id="showPassword">
    <label for="showPassword">Show password</label>
</div>
<% if(backBtn) { %>
    <div class="d-flex justify-content-between mt-4">
        <a href="/login" class="btn btn-danger">Back</a>
        <input type="submit" class="btn btn-primary" id="submit" disabled value="<%= value %>"/>
    </div>
<% } else { %>
<div class="d-flex justify-content-end mt-4">
    <input type="submit" class="btn btn-primary" id="submit" disabled value="<%= value %>"/>
</div>
<% } %>